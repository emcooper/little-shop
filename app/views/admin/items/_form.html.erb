<%= form_for [:admin, @item] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_field :description %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.label :image_path %>
  <%= f.text_field :image_path %><br>
  <%= f.label :categories %>
  <%= f.fields_for :categories, @item.categories do |category| %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :title %>
  <% end %><br>

    <%= f.select :status, ["active", "retired"] %>
  <%= f.submit %>
<% end %>
