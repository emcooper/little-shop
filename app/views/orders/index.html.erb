<div class="container text-center">
<h1><%= current_user.username %>'s Orders</h1>

  <div class="row">
  <div class="opaque order-table-width">

    <table class="table">

      <thead>
        <th class="text-center">Order ID #</th>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= link_to "order-#{order.id}", order_path(order)%></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>

</div>
