<div class="container text-center">
<h1><%= current_user.username %>'s Orders</h1>

  <div class="row">
  <div class="col-md-12 opaque">

    <table class="table">

      <thead>
        <th>Order ID #</th>
        <th></th>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th scope="row"> <%= order.id %> </th>
            <td><%= link_to "order-#{order.id}", order_path(order)%></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>

</div>
